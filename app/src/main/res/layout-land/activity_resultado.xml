<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/land.activityresultado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="checker.ifrs.edu.checker.view.activities.ResultadoActivity"
    >

    <include
        android:id="@+id/land.activityresultado.toolbar"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/land.activityresultado.toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            >

            <include
                android:id="@+id/land.activityresultado.contentresultado"
                layout="@layout/content_resultado"
                />

            <include
                android:id="@+id/land.activityresultado.footer"
                layout="@layout/footer"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
