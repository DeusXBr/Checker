<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="checker.ifrs.edu.checker.view.activities.MainActivity">

    <include layout="@layout/toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo_checker"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/footer_description_image"/>

    <Button
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:text="@string/main_button_1_title"
        android:id="@+id/nova_avaliacao"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="novaAvaliacao" />

    <Button
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:text="@string/main_button_2_title"
        android:id="@+id/avaliacaoes_realizadas"
        android:layout_below="@+id/nova_avaliacao"
        android:layout_centerHorizontal="true"
        android:onClick="listarAvaliacoes" />

    <Button
        android:layout_width="260dp"
        android:text="@string/main_button_3_title"
        android:id="@+id/sobre"
        android:layout_below="@+id/avaliacaoes_realizadas"
        android:layout_centerHorizontal="true"
        android:onClick="sobre"
        android:layout_height="55dp" />

    <include layout="@layout/footer"/>

</RelativeLayout>

