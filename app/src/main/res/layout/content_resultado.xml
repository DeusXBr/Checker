<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="64dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:src="@drawable/bom"
        android:onClick="verRelatorio"
        android:contentDescription="@string/footer_description_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/resultado_button_1_id"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="editarAvaliacao"
        android:text="@string/resultado_button_1_title"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/resultado_button_2_id"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_below="@+id/resultado_button_1_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="avaliarNovamente"
        android:text="@string/resultado_button_2_title"
        />

    <Button
        android:id="@+id/resultado_button_3_id"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_below="@+id/resultado_button_2_id"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="compartilhar"
        android:text="@string/resultado_button_3_title"
        />

</RelativeLayout>
